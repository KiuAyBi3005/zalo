<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_400"
    tools:context="com.example.quanganh.creataccountzalo.RegisterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500"
        android:minHeight="?attr/actionBarSize"
        >

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar_register"
        android:layout_marginLeft="@dimen/margin_left_right_top_register_relative_layout"
        android:layout_marginRight="@dimen/margin_left_right_top_register_relative_layout"
        android:layout_marginTop="@dimen/margin_left_right_top_register_relative_layout"
        android:background="@color/grey_50">

        <EditText
            android:id="@+id/edit_text_register_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_top_register_edit_text"
            android:layout_marginRight="@dimen/margin_left_right_top_register_edit_text"
            android:layout_marginTop="@dimen/margin_left_right_top_register_edit_text"
            android:hint="@string/register_hint_edit_text_country"
            android:textColorHint="@color/grey_900" />

        <EditText
            android:id="@+id/edit_text_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_register_country"
            android:layout_marginLeft="@dimen/margin_left_right_top_register_edit_text"
            android:layout_marginRight="@dimen/margin_left_right_top_register_edit_text"
            android:layout_marginTop="@dimen/margin_left_right_top_register_edit_text"
            android:inputType="phone"
            android:textColor="@color/grey_900" />

        <Button
            android:id="@+id/button_register_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text_register_phone"
            android:layout_marginLeft="@dimen/margin_left_right_top_register_button"
            android:layout_marginRight="@dimen/margin_left_right_top_register_button"
            android:layout_marginTop="@dimen/margin_left_right_top_register_button"
            android:background="@color/blue_500"
            android:text="@string/register_text_button_next"
            android:textColor="@color/grey_50" />

        <CheckBox
            android:id="@+id/check_box_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_register_next"
            android:layout_marginLeft="@dimen/margin_left_register_check_box"
            android:layout_marginTop="@dimen/margin_top_register_check_box"
            android:buttonTint="@color/blue_500" />

        <TextView
            android:id="@+id/text_register_content_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/check_box_register"
            android:layout_toEndOf="@+id/check_box_register"
            android:text="@string/register_text_content_check_box"
            android:textColor="@color/grey_700" />
    </RelativeLayout>

</RelativeLayout>
